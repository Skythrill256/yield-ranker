# Railway configuration for cron service
# Deploy this as a separate service for scheduled jobs

[build]
builder = "NIXPACKS"

[deploy]
startCommand = "npm run cron:daily"
# Cron schedule: 1 AM UTC (8 PM EST), Tuesday-Saturday (covers Mon-Fri market days)
cronSchedule = "0 1 * * 2-6"
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3
